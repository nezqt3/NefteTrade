{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",

    "esModuleInterop": true,
    "strict": true,

    "outDir": "dist",

    "baseUrl": ".",

    "paths": {
      "@app/*": ["app/*"],
      "@modules/*": ["modules/*"],
      "@utils/*": ["utils/*"],
      "@redis/*": ["redis/*"]
    },

    "skipLibCheck": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
